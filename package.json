{
	"name": "vite-vue3-vuetify-express",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"express": "nodemon srv/index.js",
		"express:run": "node srv/index.js",
		"mysqldump:schema": "docker exec -t mysql mysqldump -u root --databases prisma-express --no-data | sed -e 's/ AUTO_INCREMENT=[0-9]*//' > ./mysql/sql/1_schema.sql",
		"mkdir": "mkdir -p prisma/migrations/0_init",
		"create:init:migration": "npx prisma migrate diff --from-empty --to-schema-datamodel prisma/schema.prisma --script > prisma/migrations/0_init/migration.sql",
		"db:pull": "npx prisma db pull",
		"lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
		"style": "prettier --ignore-unknown --write .",
		"ncu": "npm-check-updates",
		"prepare": "npx simple-git-hooks"
	},
	"lint-staged": {
		"*": "npx prettier --ignore-unknown --write",
		"*.vue|*.js|*.jsx|*.cjs|*.mjs": "npx eslint --ignore-path .gitignore",
		"yarn.lock": "npx license-checker --production --failOn \"GPL;AGPL;LGPL;NGPL\" --summary"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged --verbose",
		"commit-msg": "npx commitlint -e"
	},
	"dependencies": {
		"@prisma/client": "4.10.1",
		"express": "^4.18.2",
		"pinia": "^2.0.30",
		"snakecase-keys": "^5.4.5",
		"vue": "^3.2.47",
		"vue-router": "^4.1.6",
		"vuetify": "^3.1.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.2",
		"@commitlint/config-conventional": "^17.4.2",
		"@mdi/font": "^7.1.96",
		"@rushstack/eslint-patch": "^1.2.0",
		"@vitejs/plugin-vue": "^4.0.0",
		"@vue/eslint-config-prettier": "^7.0.0",
		"eslint": "^8.33.0",
		"eslint-config-airbnb-base": "15.0.0",
		"eslint-import-resolver-custom-alias": "^1.3.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-vue": "^9.9.0",
		"eslint-plugin-vuetify": "^2.0.0-beta.2",
		"license-checker": "^25.0.1",
		"lint-staged": "^13.1.1",
		"nodemon": "^2.0.20",
		"npm-check-updates": "^16.6.5",
		"prettier": "^2.8.3",
		"prisma": "^4.10.1",
		"sass": "^1.58.0",
		"simple-git-hooks": "^2.8.1",
		"vite": "^4.1.1",
		"vite-plugin-eslint": "^1.8.1",
		"vite-plugin-node-polyfills": "^0.7.0",
		"vite-plugin-vuetify": "^1.0.2",
		"vue-i18n": "^9.2.2",
		"webfontloader": "^1.6.28"
	}
}
